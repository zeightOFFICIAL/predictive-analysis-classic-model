{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++ project",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",
        "-I${workspaceFolder}",
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/Records/RecordClass.cpp",
        "${workspaceFolder}/Records/RecordControl.cpp",
        "${workspaceFolder}/Statistics/StatisticsClass.cpp",        
        "${workspaceFolder}/Statistics/StatisticsControl.cpp",
        "${workspaceFolder}/Regression/RegressionControl.cpp",
        "${workspaceFolder}/Regression/RegressionClass.cpp",
        "${workspaceFolder}/Series/SeriesClass.cpp",
        "${workspaceFolder}/Series/SeriesControl.cpp",
        "-o",
        "${workspaceFolder}/build/analysis.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}